{
	"parser": "babel-eslint",
	"extends": "wpcalypso/react",
	"env": {
		"browser": true,
		"es6": true,
		"mocha": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"max-len": [ 2, { "code": 120 } ]
	}
}
